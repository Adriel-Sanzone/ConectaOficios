<!DOCTYPE html>
<html lang="es">


<head>

  <%- include ('../partials/head') %>
  <link rel="stylesheet" href="/Frontend/css/registro.css">
</head>


<body>

  <%- include ('../partials/headerRegistro') %>

  <div class="container">
    <div class="row">
      <div class="col-md-5">
        <div class="registro registro2">
          <label class="labelRegistro2" for="imagen_perfil">Añadir foto de perfil</label>
          <input class="form-control" type="file" id="imagen_perfil" accept="image/*" />
          <label class="labelRegistro2" for="imagen_portada">Añadir foto de portada</label>
          <input class="form-control" type="file" id="imagen_portada" accept="image/*" />
          <div class="row">
            <div class="col-md-8">
              <input class="form-control registrar" type="submit" value="Agregar foto">
            </div>
            <div class="col-md-4">
              <input class="form-control omitir" href="/" type="submit" value="Omitir">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!---inicio footer-->

  <%- include ('../partials/footer') %>

  <!---fin footer-->

  <script src="/Frontend/js/script.js"></script>
  <script src="/Frontend/js/funciones_usuarios.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <!-- Script para disparar la funcion que crea añade la foto del usuario-->
  <script type="text/javascript">
    //Tras apretar "Crear cuenta" obtengo los valores de los inputs
    $(".registrar").on("click", function() {

      var id = sessionStorage.getItem("IdUsuario");
      var fotoPerfil = $("#imagen_perfil");
      var fotoPortada = $("#imagen_portada");

      var datosFotoPerfil = new FormData();
      datosFotoPerfil.append("usuarioFoto", fotoPerfil[0].files[0]);
      datosFotoPerfil.append("id_usuario", id);

      var datosFotoPortada = new FormData();
      datosFotoPortada.append("usuarioFoto", fotoPortada[0].files[0]);
      datosFotoPortada.append("id_usuario", id);

      InsertarImagenes(datosFotoPerfil, datosFotoPortada);
    })

    $(".omitir").on("click", function() {
      location.href = "/";
    })
  </script>

</body>

</html>