    <div class="contenido">
      <div class="contenedor-flecha">
        <h5 class="titulo-resenia">
          <%=contador_proyectos%> Proyectos / Trabajos
        </h5>
        <i class="fas fa-chevron-down icono-perfil"></i>
      </div>
      <div class="contenedor-info " style="display:none">
